<div class="page-header">
  <h3>Card #<%= @card.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @card.title %></dd>

      <dt>Description</dt>
      <dd><%= @card.description %></dd>

      <dt>List</dt>
      <dd><%= @card.list.title %></dd>
      
      <dt>Tag</dt>
      <a href="/tags/<%= tag.id %>"><%= tag.name %></a>
      

      <dt>Position order</dt>
      <dd><%= @card.position_order %></dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/cards" class="btn btn-default">
        Back
      </a>
      <a href="/cards/<%= @card.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_card/<%= @card.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
