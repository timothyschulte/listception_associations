<!-- Validation failure messages -->
<% if @tagging.errors.any? %>
  <% @tagging.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tagging #<%= @tagging.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_tagging/<%= @tagging.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <input type="text" id="tag_id" name="tag_id" placeholder="Tag" class="form-control" value="<%= @tagging.tag_id %>">
      </div>

      <!-- Label and input for card_id -->
      <div class="form-group">
        <label for="card_id" class="control-label">
          Card
        </label>

        <input type="text" id="card_id" name="card_id" placeholder="Card" class="form-control" value="<%= @tagging.card_id %>">
      </div>

      <button class="btn btn-default">
        Update Tagging
      </button>
      or
      <a href="/taggings/<%= @tagging.id %>">Cancel</a>
    </form>
  </div>
</div>
