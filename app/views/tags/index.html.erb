<div class="page-header">
  <h1>
    Tags
    <a href="/tags/new" class="btn btn-lg btn-default">New Tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>
          <a href="/tags/<%= tag.id %>" class="btn btn-default">Show</a>
          <a href="/tags/<%= tag.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_tag/<%= tag.id %>" class="btn btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
